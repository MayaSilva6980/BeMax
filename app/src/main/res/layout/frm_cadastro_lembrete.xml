<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/cor_cinza_fundo"
    android:id="@+id/root_layout">

    <LinearLayout
        android:id="@+id/cmdVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_voltar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voltar"
            android:textColor="@color/bemax_red"
            android:textSize="18dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Title and Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lembretes"
                    android:textSize="28sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="18sp"
                    android:textColor="#007AFF"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="18sp"
                    android:textColor="#007AFF"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Container dos pickers -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- RecyclerView para Horas -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvHoras"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:clipToPadding="false"
                    android:background="@color/bemax_red"
                    android:paddingTop="80dp"
                    android:paddingBottom="80dp"
                    android:scrollbars="none"/>

                <!-- Separador ":" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/bemax_black"
                    android:layout_marginHorizontal="12dp"/>

                <!-- RecyclerView para Minutos -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvMinutos"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:clipToPadding="false"
                    android:paddingTop="80dp"
                    android:background="@color/bemax_red"
                    android:paddingBottom="80dp"
                    android:scrollbars="none"/>
            </LinearLayout>

            <!-- Faixa de seleção (linha que destaca o centro) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cor_cinza_linhas"
                android:layout_marginTop="-100dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cor_cinza_linhas"
               android:layout_marginTop="100dp"/>

            <!-- Label Option -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Label"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aspirin"
                    android:textSize="16sp"
                    android:textColor="#8E8E93" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="16dp" />

            <!-- Sound Option -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sound"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radial"
                    android:textSize="16sp"
                    android:textColor="#8E8E93" />
            </LinearLayout>

        </LinearLayout>
</LinearLayout>