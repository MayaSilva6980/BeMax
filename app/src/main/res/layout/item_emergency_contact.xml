<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contactCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/bemax_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Avatar Circle -->
        <FrameLayout
            android:id="@+id/avatarCircle"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_icon_circle_red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/txtAvatarInitials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="AB"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/bemax_red" />
        </FrameLayout>

        <!-- Primary Badge -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipPrimary"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="@string/emergency_contact_primary"
            android:textSize="10sp"
            android:textColor="@color/bemax_white"
            app:chipBackgroundColor="@color/bemax_success"
            app:chipMinHeight="24dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/avatarCircle"
            app:layout_constraintStart_toStartOf="@id/avatarCircle"
            app:layout_constraintEnd_toEndOf="@id/avatarCircle"
            android:translationY="-8dp" />

        <!-- Contact Info -->
        <LinearLayout
            android:id="@+id/contactInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/avatarCircle"
            app:layout_constraintEnd_toStartOf="@id/btnMore"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/txtContactName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JoÃ£o Silva"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/bemax_black"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txtContactRelationship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pai"
                android:textSize="14sp"
                android:textColor="@color/bemax_gray_dark"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_telefone"
                    app:tint="@color/bemax_gray_dark"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/txtContactPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(11) 98765-4321"
                    android:textSize="13sp"
                    android:textColor="@color/bemax_blue"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp"
                    android:layout_marginStart="2dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>

        <!-- More Options Button -->
        <ImageView
            android:id="@+id/btnMore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_more"
            android:padding="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/action_edit"
            app:tint="@color/bemax_gray_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Action Buttons (Hidden by default, shown on click) -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/contactInfo"
            app:layout_constraintStart_toStartOf="@id/contactInfo"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCall"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/emergency_contact_call"
                android:textSize="12sp"
                app:icon="@drawable/ic_telefone"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:cornerRadius="8dp"
                android:layout_marginEnd="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMessage"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/emergency_contact_message"
                android:textSize="12sp"
                app:icon="@drawable/ic_message"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:cornerRadius="8dp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

