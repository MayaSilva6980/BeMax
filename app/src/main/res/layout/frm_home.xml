<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/fixedContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Saudação -->
        <TextView
            android:id="@+id/lblSaudacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bemax_black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Cards de Saúde em Grid 2x2 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:columnOrderPreserved="false">

            <!-- Card Frequência Cardíaca -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/bemax_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_coracao"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/lblBatimento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="78 BPM"
                        android:textColor="@color/bemax_black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frequência Cardíaca"
                        android:textColor="@color/on_surface_variant"
                        android:textSize="13sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Oxigênio -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/bemax_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_pressao"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/lblPressao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120/80"
                        android:textColor="@color/bemax_black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pressão"
                        android:textColor="@color/on_surface_variant"
                        android:textSize="13sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Sono -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/bemax_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_sono"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/lblSono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7h 30m"
                        android:textColor="@color/bemax_black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sono"
                        android:textColor="@color/on_surface_variant"
                        android:textSize="13sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Hidratação -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/bemax_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_hidratacao"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/lblHidratacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.2 L"
                        android:textColor="@color/bemax_black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hidratação"
                        android:textColor="@color/on_surface_variant"
                        android:textSize="13sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

        <!-- Cabeçalho da Seção de Lembretes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" >

            <TextView
                android:id="@+id/tvNextReminders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:text="Próximos Lembretes"
                android:textColor="@color/bemax_black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/lnlAdicionarLembrete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="10">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/imgMais"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/secondary"
                    app:layout_constraintTop_toTopOf="@id/tvNextReminders"
                    app:layout_constraintEnd_toEndOf="@id/tvNextReminders">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mais"
                        app:tint="@color/on_secondary" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Container para Lista de Lembretes (COM SCROLL) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/fixedContent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- RecyclerView de Lembretes (COM SCROLL PRÓPRIO) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvLembretes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:visibility="visible"
            tools:listitem="@layout/item_reminder"/>

        <!-- Empty State (SCROLLÁVEL) -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/emptyStateReminders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="gone">
            
            <include
                layout="@layout/empty_state_reminders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
                
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
