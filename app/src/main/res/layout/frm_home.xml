<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cor_cinza_fundo">


    <!-- ConteÃºdo scrollÃ¡vel -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- SaudaÃ§Ã£o -->
            <TextView
                android:id="@+id/lblSaudacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OlÃ¡, Mayara ðŸ‘‹"
                android:textColor="@color/bemax_black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- Cards de SaÃºde em Grid 2x2 -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:columnOrderPreserved="false">

                <!-- Card FrequÃªncia CardÃ­aca -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/bemax_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_coracao"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/lblBatimento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="78 BPM"
                            android:textColor="@color/bemax_black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FrequÃªncia CardÃ­aca"
                            android:textColor="@color/cor_cinza_mais_escuro"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card OxigÃªnio -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/bemax_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_pressao"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/lblPressao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120/80"
                            android:textColor="@color/bemax_black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PressÃ£o"
                            android:textColor="@color/cor_cinza_mais_escuro"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card Sono -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/bemax_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_sono"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/lblSono"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7h 30m"
                            android:textColor="@color/bemax_black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sono"
                            android:textColor="@color/cor_cinza_mais_escuro"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card HidrataÃ§Ã£o -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/bemax_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_hidratacao"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/lblHidratacao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.2 L"
                            android:textColor="@color/bemax_black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HidrataÃ§Ã£o"
                            android:textColor="@color/cor_cinza_mais_escuro"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" >

                <!-- SeÃ§Ã£o de Lembretes -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:text="PrÃ³ximos Lembretes"
                    android:textColor="@color/bemax_black"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="20">

                    <ImageView
                        android:id="@+id/imgMais"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_mais"/>

                </LinearLayout>

            </LinearLayout>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rcvLembretes"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
