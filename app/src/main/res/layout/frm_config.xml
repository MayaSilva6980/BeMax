<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bemax_gray_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- ===== HEADER: PERFIL DO USUÁRIO ===== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/bemax_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Foto do Usuário -->
                <FrameLayout
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgUserPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profile"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/bemax_red" />

                    <!-- Badge de Status -->
                    <View
                        android:id="@+id/statusIndicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/bg_status_indicator"
                        android:visibility="gone" />
                </FrameLayout>

                <!-- Informações do Usuário -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nome do Usuário"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/bemax_black"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/txtUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email@exemplo.com"
                        android:textSize="14sp"
                        android:textColor="@color/bemax_gray_dark"
                        android:layout_marginTop="4dp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- Barra de Progresso do Perfil -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical">

                        <ProgressBar
                            android:id="@+id/progressProfileCompletion"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:layout_weight="1"
                            android:progress="75"
                            android:max="100"
                            android:progressTint="@color/bemax_success"
                            android:progressBackgroundTint="@color/bemax_gray" />

                        <TextView
                            android:id="@+id/txtProfileCompletion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75%"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/bemax_success"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Ícone de Editar -->
                <ImageView
                    android:id="@+id/btnEditProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_edit"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/profile_edit"
                    app:tint="@color/bemax_red" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== SEÇÃO: INFORMAÇÕES DE SAÚDE ===== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_health_info"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/bemax_black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Informações Pessoais -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnInfoPessoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/bemax_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Ícone com Fundo Colorido -->
                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_icon_circle_blue">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_info_usuario"
                        app:tint="@color/bemax_blue" />
                </FrameLayout>

                <!-- Texto -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_personal_info"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/bemax_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subtitle_personal_info"
                        android:textSize="13sp"
                        android:textColor="@color/bemax_gray_dark"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Seta -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_seta"
                    app:tint="@color/bemax_gray_dark" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnHealthProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/bemax_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_icon_circle_red">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_info_medica"
                        app:tint="@color/bemax_red" />
                </FrameLayout>

                <!-- Texto -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_medical_info"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/bemax_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/health_profile_subtitle"
                        android:textSize="13sp"
                        android:textColor="@color/bemax_gray_dark"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Seta -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_seta"
                    app:tint="@color/bemax_gray_dark" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Contatos de Emergência -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnContatoFamilia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/bemax_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_icon_circle_green">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_ctt_emergencia"
                        app:tint="@color/bemax_success" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_family_contacts"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/bemax_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subtitle_family_contacts"
                        android:textSize="13sp"
                        android:textColor="@color/bemax_gray_dark"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_seta"
                    app:tint="@color/bemax_gray_dark" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== SEÇÃO: PREFERÊNCIAS ===== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_preferences"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/bemax_black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Notificações -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/bemax_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_icon_circle_warning">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_notifications"
                        app:tint="@color/bemax_warning" />
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/config_notifications"
                    android:textSize="16sp"
                    android:textColor="@color/bemax_black" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_seta"
                    app:tint="@color/bemax_gray_dark" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Privacidade e Segurança -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnPrivacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/bemax_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_icon_circle_gray">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_lock"
                        app:tint="@color/bemax_gray_dark" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/config_privacy"
                        android:textSize="16sp"
                        android:textColor="@color/bemax_black" />

                    <TextView
                        android:id="@+id/txtBiometricStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/biometric_enabled"
                        android:textSize="12sp"
                        android:textColor="@color/bemax_success"
                        android:layout_marginTop="2dp"
                        android:drawableStart="@drawable/ic_check_small"
                        android:drawablePadding="4dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_seta"
                    app:tint="@color/bemax_gray_dark" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== SEÇÃO: SOBRE ===== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_about"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/bemax_black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Termos e Políticas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/bemax_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="26dp"
                    android:src="@drawable/ic_document"
                    app:tint="@color/bemax_gray_dark" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/config_terms"
                    android:textSize="16sp"
                    android:textColor="@color/bemax_black" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_seta"
                    app:tint="@color/bemax_gray_dark" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Ajuda e Suporte -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/bemax_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="26dp"
                    android:src="@drawable/ic_help"
                    app:tint="@color/bemax_gray_dark" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/config_help"
                    android:textSize="16sp"
                    android:textColor="@color/bemax_black" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_seta"
                    app:tint="@color/bemax_gray_dark" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Versão do App -->
        <TextView
            android:id="@+id/txtAppVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_version"
            android:textSize="13sp"
            android:textColor="@color/bemax_gray_dark"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- ===== BOTÃO DE LOGOUT ===== -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/logout_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/bemax_error"
            app:icon="@drawable/ic_logout"
            app:iconTint="@color/bemax_error"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:cornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/bemax_error"
            app:backgroundTint="@color/bemax_white"
            app:rippleColor="@color/bemax_error"
            android:elevation="0dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
