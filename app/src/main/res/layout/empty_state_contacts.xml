<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp">

    <!-- Illustration Circle Background -->
    <View
        android:id="@+id/emptyIllustrationBg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_empty_state_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <!-- Icon -->
    <ImageView
        android:id="@+id/emptyIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_ctt_emergencia"
        android:contentDescription="@string/emergency_contacts_empty_title"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/emptyIllustrationBg"
        app:layout_constraintBottom_toBottomOf="@id/emptyIllustrationBg"
        app:layout_constraintStart_toStartOf="@id/emptyIllustrationBg"
        app:layout_constraintEnd_toEndOf="@id/emptyIllustrationBg" />

    <!-- Title -->
    <TextView
        android:id="@+id/emptyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/emergency_contacts_empty_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/bemax_black"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/emptyIllustrationBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/emptySubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/emergency_contacts_empty_subtitle"
        android:textSize="15sp"
        android:textColor="@color/bemax_gray_dark"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/emptyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Add Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddFirstContact"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/emergency_contacts_add_first"
        android:textSize="16sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_add"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/bemax_red"
        android:textColor="@color/bemax_white"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/emptySubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="300dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

