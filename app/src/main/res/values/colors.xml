    <color name="gray">@color/neutral_80</color>
    <color name="cor_transparente">@color/transparent</color>
    <color name="cor_cinza">@color/neutral_40</color>
    <color name="cor_cinza_mais_escuro">@color/neutral_70</color>
    <color name="cor_cinza_transparente">@color/scrim</color>
    <color name="cor_cinza_linhas">@color/outline</color>
    <color name="cor_cinza_claro">@color/neutral_50</color>
    <color name="cor_cinza_escuro">@color/neutral_80</color>
    <color name="cor_whatsapp">@color/whatsapp</color>
    <color name="cor_cinza_fundo">@color/surface_variant</color>

</resources>
